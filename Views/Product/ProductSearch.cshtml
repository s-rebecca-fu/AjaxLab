@model IEnumerable <AjaxLab.Models.Product>

@{
    ViewBag.Title = "Product Search";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
}

<h2>@ViewBag.Title</h2>

@using (Ajax.BeginForm("ProductSearch", "Product",
                            new AjaxOptions
                            {
                                HttpMethod = "GET",
                                UpdateTargetId = "ProductSearch",
                                OnFailure = "searchFailed"
                            }))
{
    //<input id="searchBox" type="text" name="query" />
    <div class="row">
        <div class="col-xs-6">
            <p>Supplier ID</p>
        </div>
        <div class="col-xs-6">
            <p>category Id</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5">
            @Html.DropDownList("categoryId", null, htmlAttributes: new { @class = "form-control", @AppendDataBoundItems = "true" })
        </div>
        <div class="col-xs-5">
            @Html.DropDownList("supplierId", null, htmlAttributes: new { @class = "form-control", @AppendDataBoundItems = "true" })
        </div>
        <div class="col-xs-2">
            <input type="submit" value="search" class="btn" />
        </div>
    </div>
    <br />

    
}

<div id="ProductSearch">
    @Html.Partial("_ProductSearchPartial", Model)
</div>

